<p id="notice"><%= notice %></p>

<h1>Work Shops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Drop in</th>
      <th>Leader</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_shops.each do |work_shop| %>
      <tr>
        <td><%= work_shop.name %></td>
        <td><%= work_shop.description %></td>
        <td><%= work_shop.location_id %></td>
        <td><%= work_shop.drop_in %></td>
        <td><%= work_shop.leader_id %></td>
        <td><%= link_to 'Show', work_shop %></td>
        <td><%= link_to 'Edit', edit_work_shop_path(work_shop) %></td>
        <td><%= link_to 'Destroy', work_shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work Shop', new_work_shop_path %>
